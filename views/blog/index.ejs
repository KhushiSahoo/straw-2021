<% layout('layouts/boilerplate') %>
<div class="heading headAllBlog">
   <div class="container heado">
     <center>
     <h2><span>STRAW/BLOG</span></h2>
     <h3 class="p-2">
       When you’re ready to show love, they’re ready to give it.
     </h3>
   </center>
   </div>
<!--heading end-->    
</div>
<div class="contents container">
   <center>
   <h2 class="adopt">All Blogs</h2>
   <div class="all p-4">
       <div class="row d-flex justify-content-center mx-0 my-3 m-xs-3" onclick="location.href='Blog/new'" style="cursor: pointer;">
           <div class="col-lg-4 capsule d-flex news-content py-2 link  btn">
              <span m-auto>Add Blog</span>
               
           </div>
         </div>
     </div>



     <div class="row g-2">
       <!--row start-->
       <%   for(let blog of blogs){ %>
       <div class="col-lg-6 col-md-12 col-sm-12">
         <div class="card mb-5 shadow-sm">
           <img alt="Card image cap" class="card-img-top img-fluid" src="<%=blog.images[0].url%>" />
           

           <div class="card-body bowdy">
             <div class="card-title">
               <h2><%=blog.title%></h2>
             </div>
             <div class="card-text">
               <p>
                  This blog  is intended to provide you with information /suggestion about <%=blog.title%>.....
                  <%=blog.info.slice(0 ,8)%>......<br>
                  By : <%=blog.author.username%>
               </p>
             </div>
             <a href="blog/<%=blog._id%>" class="btn btn-outline-primary rounded-0 float-end bttn"
               >Read More</a
             >
           </div>
         </div>
       </div>
       <% } %>
       <!--row end-->
     </div>



   </center>
   <!--content end-->
</div>
<div class="container foot">
   <h5>contact us:</h5>
</div>













