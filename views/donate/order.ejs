<% layout('layouts/boilerplate') %>
<div class="contents container">
<div class="d-flex justify-content-center">
	<form method="POST" action="/payment/order">
		<div class="mb-3">
		  <label for="amountInput" class="form-label">Enter Amount</label>
		  <input name="amount" type="number" min="1" class="form-control form-control-lg" id="amountInput" aria-describedby="amountHelp" required>
		  <div id="amountHelp" class="form-text">Your gift today will make difference for animals in need.</div>
		</div>

		<div class="d-grid">
			<button type="submit" class="btn btn-primary bttn" id="getOrderIdBtn">Submit</button>
		</div>
	</form>
</div>
</div>